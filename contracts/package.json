{
    "name": "lumina-contracts",
    "version": "1.0.0",
    "scripts": {
        "compile": "hardhat compile",
        "test": "hardhat test",
        "deploy": "hardhat deploy",
        "deploy:local": "hardhat deploy --network localhost",
        "deploy:sepolia": "hardhat deploy --network sepolia",
        "deploy:somnia": "hardhat deploy --network somniaTestnet",
        "deploy:somnia-devnet": "hardhat deploy --network somniaDevnet",
        "deploy:nft": "hardhat deploy --tags nft",
        "deploy:auction": "hardhat deploy --tags auction",
        "deploy:marketplace": "hardhat deploy --tags marketplace",
        "deploy:setup": "hardhat deploy --tags setup",
        "test:deployment:local": "hardhat run scripts/test-deployment.js --network localhost",
        "test:deployment:sepolia": "hardhat run scripts/test-deployment.js --network sepolia",
        "test:deployment:somnia": "hardhat run scripts/test-deployment.js --network somniaTestnet",
        "size": "hardhat size-contracts",
        "coverage": "hardhat coverage",
        "lint": "solhint 'contracts/**/*.sol'",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "@chainlink/contracts": "^1.4.0",
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.9",
        "@nomicfoundation/hardhat-ethers": "^3.0.2",
        "@openzeppelin/contracts": "^5.4.0",
        "chai": "^4.3.10",
        "dotenv": "^17.1.0",
        "ethers": "^6.15.0",
        "hardhat": "^2.25.0",
        "hardhat-contract-sizer": "^2.10.0",
        "hardhat-deploy": "^0.12.4",
        "hardhat-gas-reporter": "^2.3.0",
        "hardhat-verify": "^1.0.0",
        "prettier": "^3.6.2",
        "prettier-plugin-solidity": "^2.0.0",
        "solhint": "^6.0.0",
        "solidity-coverage": "^0.8.16"
    }
}
